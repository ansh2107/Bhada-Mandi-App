<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:weightSum="1">


        <AutoCompleteTextView
            android:id="@+id/from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:background="#ffcc66"
            android:ems="10"
            android:hint="* Enter source city"

            android:paddingLeft="15dp"
            android:textSize="30sp" />

        <AutoCompleteTextView
            android:id="@+id/to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#ffcc66"
            android:ems="10"

            android:hint="* Enter destination city"
            android:paddingLeft="15dp"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:background="#ffcc66"


            android:orientation="horizontal">

            <Spinner
                android:id="@+id/vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:entries="@array/vehicles"
                android:gravity="center"
                android:prompt="@string/vehicle_prompt"
                android:spinnerMode="dialog" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/drop" />


        </RelativeLayout>

        <!--    <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/material"
                android:hint="Material"
                android:layout_below="@+id/vehicle"
                android:linksClickable="false"
                android:visibility="visible" />-->

        <EditText
            android:id="@+id/frieght"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/material"

            android:layout_marginTop="20dp"
            android:background="#ffcc66"
            android:hint="Freight"
            android:inputType="number"
            android:linksClickable="false"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textSize="30sp"
            android:visibility="visible" />

        <!--<EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/Penalty"
            android:hint="Penalty"
            android:linksClickable="false"
            android:visibility="visible"
            android:layout_below="@+id/frieght"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />-->


        <EditText
            android:id="@+id/Remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/frieght"
            android:layout_marginTop="20dp"

            android:background="#ffcc66"
            android:ems="10"
            android:hint="Remark"
            android:inputType="none"
            android:linksClickable="false"
            android:paddingLeft="15dp"
            android:singleLine="false"
            android:textSize="30sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="40dp"
            android:background="#FA0"
            android:text="@string/one"
            android:textColor="#fff"
            android:textSize="20dp" />


    </LinearLayout>
</ScrollView>