<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:id="@+id/activity_reg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1">

        <TextView
            android:id="@+id/iu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:text="Upload Logo "
            android:textColor="#FA0"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/upload_image"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/reg_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="User Name"
            android:linksClickable="false"
            android:visibility="visible">

        </EditText>

        <EditText
            android:id="@+id/reg_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/reg_user"
            android:ems="10"
            android:hint="Transport Name"
            android:inputType="textCapCharacters"
            android:linksClickable="false"
            android:visibility="visible" />

        <EditText
            android:id="@+id/reg_pass"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/reg_name"
            android:hint="Password"
            android:inputType="textPassword"
            android:linksClickable="false"
            android:visibility="visible" />


        <EditText
            android:id="@+id/reg_mob"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/reg_pass"
            android:hint="Mobile No."
            android:inputType="number"
            android:linksClickable="false"
            android:visibility="visible" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/reg_user"
            android:ems="10"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:linksClickable="false"
            android:visibility="visible" />

        <EditText
            android:id="@+id/reg_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/reg_mob"
            android:ems="10"
            android:hint="Address"
            android:linksClickable="false"
            android:visibility="visible" />

        <EditText
            android:id="@+id/service_tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/reg_mob"
            android:ems="10"
            android:hint="Service Tax Number"
            android:inputType="textCapCharacters"
            android:linksClickable="false"
            android:visibility="visible" />

        <AutoCompleteTextView
            android:id="@+id/city_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter your city"></AutoCompleteTextView>

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="#FA0"
            android:text="Register"
            android:textColor="#f9f4f4"
            android:textSize="20dp" />

    </LinearLayout>

</ScrollView>